<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/warning_time_label"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/warningTimeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioImmediate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/immediate"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/radio1Min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/one_minute"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/radio5Min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/five_minutes"
            android:checked="true"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/radio10Min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ten_minutes"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/radio15Min"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fifteen_minutes"
            android:padding="8dp" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="@color/divider" />

    <CheckBox
        android:id="@+id/allowFinishVideoCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/allow_finish_video"
        android:checked="true"
        android:padding="8dp" />

</LinearLayout>
