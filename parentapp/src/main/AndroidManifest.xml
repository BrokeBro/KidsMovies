<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ParentApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KidsMoviesParent"
        tools:targetApi="31">

        <activity
            android:name=".ui.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.KidsMoviesParent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activities.ChildDetailActivity"
            android:parentActivityName=".ui.activities.MainActivity" />

        <activity
            android:name=".ui.activities.PairingActivity"
            android:parentActivityName=".ui.activities.MainActivity" />

        <!-- OneDrive Setup Activity -->
        <activity
            android:name=".ui.activities.OneDriveSetupActivity"
            android:parentActivityName=".ui.activities.MainActivity" />

        <!-- MSAL auth redirect activity for OneDrive sign-in -->
        <activity
            android:name="com.microsoft.identity.client.BrowserTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="com.kidsmovies.parent"
                    android:path="/YOUR_SIGNATURE_HASH_HERE"
                    android:scheme="msauth" />
            </intent-filter>
        </activity>

    </application>

</manifest>
