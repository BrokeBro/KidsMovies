<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/videoCard"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/background_card"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:rippleColor="@color/ripple_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Thumbnail with 2:3 poster aspect ratio -->
        <ImageView
            android:id="@+id/videoThumbnail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_thumbnail_placeholder"
            android:contentDescription="@string/cd_video_thumbnail"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="2:3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Duration badge -->
        <TextView
            android:id="@+id/durationBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/bg_duration_badge"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/videoThumbnail"
            app:layout_constraintEnd_toEndOf="@id/videoThumbnail"
            tools:text="1:30:45" />

        <!-- Favourite indicator -->
        <ImageView
            android:id="@+id/favouriteIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="6dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_favourite_filled"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/videoThumbnail"
            app:layout_constraintTop_toTopOf="@id/videoThumbnail"
            app:tint="@color/favourite_active" />

        <!-- Parental lock overlay -->
        <ImageView
            android:id="@+id/lockOverlay"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_margin="6dp"
            android:background="@drawable/bg_lock_badge"
            android:contentDescription="@string/cd_locked_content"
            android:padding="4dp"
            android:src="@drawable/ic_lock"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/videoThumbnail"
            app:layout_constraintTop_toTopOf="@id/videoThumbnail"
            app:tint="@color/white" />

        <!-- Cloud/Online badge -->
        <LinearLayout
            android:id="@+id/cloudBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/bg_cloud_badge"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/videoThumbnail"
            app:layout_constraintStart_toStartOf="@id/videoThumbnail">

            <ImageView
                android:id="@+id/cloudIcon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:contentDescription="@null"
                android:src="@drawable/ic_cloud"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- Download progress spinner -->
        <ProgressBar
            android:id="@+id/downloadSpinner"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:indeterminate="true"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/videoThumbnail"
            app:layout_constraintEnd_toEndOf="@id/videoThumbnail"
            app:layout_constraintStart_toStartOf="@id/videoThumbnail"
            app:layout_constraintTop_toTopOf="@id/videoThumbnail" />

        <!-- Watch progress bar -->
        <View
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="@color/progress_red"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/videoThumbnail"
            app:layout_constraintStart_toStartOf="@id/videoThumbnail" />

        <!-- Video title -->
        <TextView
            android:id="@+id/videoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:padding="8dp"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/videoThumbnail"
            tools:text="Video Title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
