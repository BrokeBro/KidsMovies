<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kid_lock_bg_top">

    <!-- Big moon emoji at top -->
    <TextView
        android:id="@+id/lockEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/emoji_moon"
        android:textSize="100sp"
        app:layout_constraintBottom_toTopOf="@id/lockMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Stars around the emoji for decoration -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:text="@string/emoji_star"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/lockEmoji"
        app:layout_constraintEnd_toStartOf="@id/lockEmoji" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:text="@string/emoji_star"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/lockEmoji"
        app:layout_constraintTop_toTopOf="@id/lockEmoji" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="32dp"
        android:text="@string/emoji_star"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/lockEmoji"
        app:layout_constraintStart_toStartOf="@id/lockEmoji" />

    <!-- Main message - big and friendly -->
    <TextView
        android:id="@+id/lockMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/lock_screen_message"
        android:textColor="@color/kid_lock_accent"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@id/lockSubMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lockEmoji" />

    <!-- Sub message -->
    <TextView
        android:id="@+id/lockSubMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="48dp"
        android:gravity="center"
        android:lineSpacingExtra="6dp"
        android:text="@string/lock_screen_sub_message"
        android:textColor="@color/kid_lock_subtitle"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/unlockTimeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lockMessage" />

    <!-- Unlock time - friendly and visible -->
    <TextView
        android:id="@+id/unlockTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="48dp"
        android:background="@drawable/bg_unlock_time_pill"
        android:gravity="center"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:textColor="@color/kid_unlock_time"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lockSubMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>
