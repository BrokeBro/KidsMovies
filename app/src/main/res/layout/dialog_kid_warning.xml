<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="28dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/kid_dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:paddingTop="36dp"
        android:paddingBottom="28dp">

        <!-- Big emoji icon -->
        <TextView
            android:id="@+id/dialogEmoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="72sp"
            android:text="@string/emoji_wave" />

        <!-- Title -->
        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textColor="@color/kid_dialog_title"
            android:textSize="28sp" />

        <!-- Message -->
        <TextView
            android:id="@+id/dialogMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/kid_dialog_text"
            android:textSize="20sp" />

        <!-- Big friendly button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dialogButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:minWidth="200dp"
            android:textSize="22sp"
            android:fontFamily="sans-serif-bold"
            android:letterSpacing="0.05"
            app:cornerRadius="30dp"
            app:backgroundTint="@color/kid_button_primary"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
